<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.apache.ibatis.domain.blog.mappers.AuthorMapper">
	<resultMap id="baseAuthorResultMap" type="org.apache.ibatis.domain.blog.Author">
		<id column="id" property="id" />
		<result property="username" column="username" />
		<result property="password" column="password" />
		<result property="email" column="email" />
		<result property="bio" column="bio" />
		<result property="favouriteSection" column="favourite_section" />
	</resultMap>

	<!--实现Collection的方式1,使用这种方式可以实现结果1:n的映射,而不必将结果扩大成n:n,column="id"代表的子查询需要传入的值从数据库那个列来,ofType是结果的声明参数,可以不用-->
	<resultMap id="cBaseAuthorResultMap" type="org.apache.ibatis.domain.blog.Author" extends="baseAuthorResultMap">
		<collection property="books" ofType="org.apache.ibatis.domain.blog.Book" javaType="java.util.ArrayList" select="selectBooks" column="id"/>
	</resultMap>

	<!--实现Collection的方式2,使用这种方式可以实现结果n:n==1:1的映射,将结果扩大成n:n,ofType="org.apache.ibatis.domain.blog.Book"必须赋值-->
	<resultMap id="cBaseAuthorResultMaps" type="org.apache.ibatis.domain.blog.Author" extends="baseAuthorResultMap">
		<collection property="books" ofType="org.apache.ibatis.domain.blog.Book" javaType="java.util.ArrayList" >
			<id column="id" property="id" />
			<result property="name" column="name" />
		</collection>
	</resultMap>

	<!--<select id="selectOne" resultMap="baseAuthorResultMap">
		SELECT * FROM author <where> id=#{id} </where>
	</select>

	<select id="selectAuthors" resultMap="cBaseAuthorResultMap">
		SELECT * FROM author WHERE id=#{param1} and username=#{param1}
	</select>-->
	<select id="selectAuthorsCopy" resultMap="baseAuthorResultMap">
		<bind name="user" value="_parameter"/>
		SELECT * FROM author WHERE id = #{id}
	</select>
	<!--<select id="selectAuthorsByUser" resultMap="baseAuthorResultMap" parameterType="org.apache.ibatis.domain.blog.Author">
		SELECT * FROM author WHERE id=#{id} and username=#{username}
	</select>

	<select id="selectBooks" resultMap="cBaseAuthorResultMap">
		SELECT * FROM book WHERE author_id=#{id}
	</select>

	<select id="selectAuthorAndBooks" resultMap="cBaseAuthorResultMaps">
		SELECT * FROM book b LEFT JOIN author a  on a.id=b.author_id WHERE  author_id=#{id}
	</select>-->
</mapper>