<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.apache.ibatis.domain.blog.mappers.BookMapper">
	<resultMap id="baseBookResultMap" type="org.apache.ibatis.domain.blog.Book">
		<id column="id" property="id" />
		<result property="name" column="name" />
	</resultMap>
	<!--resultMap必须写在此处不然会报错,或者使用全名,比如org.apache.ibatis.domain.blog.mappers.AuthorMapper.baseAuthorResultMap-->
	<!--
		<resultMap id="baseAuthorResultMap2" type="org.apache.ibatis.domain.blog.Author">
			<id column="id" property="id" />
			<result property="username" column="username" />
			<result property="password" column="password" />
			<result property="email" column="email" />
			<result property="bio" column="bio" />
			<result property="favouriteSection" column="favourite_section" />
		</resultMap>
	-->
	<!--association站在配置一端描述的是一对一的关系,而Collection站在配置一端描述的是一对多的关系-->
	<resultMap id="baseBookResultMapX" type="org.apache.ibatis.domain.blog.Book">
		<id column="id" property="id" />
		<result property="name" column="name" />
		<association property="author" resultMap="org.apache.ibatis.domain.blog.mappers.AuthorMapper.baseAuthorResultMap"/>
	</resultMap>

	<select id="selectBookAndAuthors" resultMap="baseBookResultMapX">
		SELECT b.id,b.name,a.id,a.username,a.id,a.bio,a.email,a.favourite_section,a.password FROM book b LEFT JOIN author a ON b.author_id=a.id WHERE author_id=#{authorId}
	</select>

	<select id="selectOne" resultMap="baseBookResultMap">
		SELECT * FROM book WHERE id=#{id}
	</select>
</mapper>